<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="No"
        android:id="@+id/num"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorAccent"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ItemImage"
        android:layout_toRightOf="@+id/num"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="ITEM NAME"
        android:id="@+id/name"
        android:layout_alignTop="@+id/ItemImage"
        android:layout_toRightOf="@+id/ItemImage"
        android:layout_toEndOf="@+id/ItemImage"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="brand"
        android:id="@+id/brand"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/prvImage"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/name"
        android:background="@drawable/good_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:id="@+id/like"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/prvImage"
        android:layout_alignRight="@+id/prvImage"
        android:layout_alignLeft="@+id/prvImage"
        android:layout_alignStart="@+id/prvImage" />

</RelativeLayout>