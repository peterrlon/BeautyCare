<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <TextView
        android:id="@+id/System_Setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="System Setting"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sButton"
                android:textSize="20sp"
                android:background="@drawable/button1"
                android:textAllCaps="false"
                android:text="About BeautyCare"
                android:textColor="@color/colorAccent"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/sline1"
                android:background="#f2f2f2"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sButton1"
                android:textSize="20sp"
                android:background="@drawable/button1"
                android:textAllCaps="false"
                android:text="Contact Us"
                android:textColor="@color/colorAccent"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/sline2"
                android:background="#f2f2f2"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sButton2"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="Recommend OpenBuy to Friends"
                android:textColor="@color/colorAccent"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/sline3"
                android:background="#f2f2f2"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sButton3"
                android:background="@drawable/button1"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="Version 1.0"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>